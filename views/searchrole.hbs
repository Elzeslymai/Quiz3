    <center>
        <br><br><br>
    Role: 
        <select name="srole" id="srole">
            <option value="admin">Admin</option>
            <option value="user">User</option>
        </select> <br><br>
        <button type="submit" id="btnsubmit" class="btn btn-warning">Search</button>
    </center>
        <script>
            $(function(){
                var searchRole = $('#srole').val();
                $('#srole').change(function(){
                    searchRole = $(this).val();
                });
                $('#btnsubmit').click(function(){
                    window.location.href = "/user/role/"+searchRole;
                });
               
            });
        </script>
